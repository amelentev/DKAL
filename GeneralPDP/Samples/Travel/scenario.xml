	<!-- CS Department -->
	<endpoint id="cs_xacml" type="xacml" color="purple" />
	<endpoint id="cs_dkal" type="dkal" xacml="basicTrust" pepId="cs_x2d" policyId="cs-policy" file="cs_policy.dkal" dispatcher="first" color="purple" />
